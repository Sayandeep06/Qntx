generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  orders   Order[]
  balances Balance[]
}

model Market {
  symbol    String @id @default(uuid())
  baseAsset String
  quoteAsset String

  orders Order[]
  trades Trade[]
}

model Order {
  id       String @id @default(uuid())
  userId   String
  market   String
  side     String
  price    Float
  quantity Float
  filled   Float  @default(0)
  status   String @default("open")

  user      User   @relation(fields: [userId], references: [id])
  marketRef Market @relation(fields: [market], references: [symbol])
  trades    Trade[]
}

model Trade {
  id       String @id @default(uuid())
  orderId  String
  market   String
  price    Float
  quantity Float

  order     Order  @relation(fields: [orderId], references: [id])
  marketRef Market @relation(fields: [market], references: [symbol])
}

model Balance {
  userId String @map("user_id")
  asset  String
  amount Float  @default(0)

  user User @relation(fields: [userId], references: [id])

  @@id([userId, asset])
}